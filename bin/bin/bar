#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# the unholy lemonbar
#

# -*-*-*-*-*-* init -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*
bar_fifo=${XDG_CACHE_HOME:-~/.cache}/bar
song_skroll=${XDG_CACHE_HOME:-~/.cache}/song_skroll

rm $bar_fifo $song_skroll 2>/dev/null ||:
mkfifo $bar_fifo

# -*-*-*-*-*-* daemons *-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*
while read -r line ; do
    xsetroot -name "$line"
done <$bar_fifo &

pids=$!

while sleep 3 ; do
    while pgrep mpv >/dev/null && \
        : | nc -U -N /tmp/mpvsocket 2>/dev/null ;do
        $HOME/bin/song-name | skroll -n 40 -d 0.2 -r >>$song_skroll
    done
    rm $song_skroll 2>/dev/null ||:
done &

pids="$pids $!"

trap 'for p in $pids ; do kill -9 $p ; done ; \
    rm $bar_fifo $song_skroll ; xsetroot -name killed' \
    INT TERM QUIT KILL EXIT

# -*-*-*-*-* helper functions -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*
get_interface() {
while read -r int _ ; do
    case $int in
        Inter*|*face)
            # garbage
            ;;
        *)
            printf '%s\n' "${int%:}"
    esac
done </proc/net/wireless
}


human() {  
    [ "$1" ] || { read -r inp ; set -- $inp ; }

    if [ $1 -gt 1073741824 ] ; then
        res=$(( $1 * 10 / 1073741824 ))
        pow=G
    elif [ $1 -gt 1048576 ] ; then
        res=$(( $1 * 10 / 1048576 ))
        pow=M
    elif [ $1 -gt 1024 ] ; then
        res=$(( $1 * 10 / 1024 ))
        pow=K
    else
        printf '%sB\n' ${1:-0}
        exit
    fi

    printf "%s$pow\n" "${res%?}.${res#${res%?}}"
}

# -*-*-*-*-* modules -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*--*-*-*
get_vpn() {
while read -r cmd ; do
    case $cmd in
        openvpn*)
            vpn=${cmd##* }
            vpn=${vpn##*/}
            vpn="ï€£ ${vpn%.ovpn}"
            break
    esac
done <<EOF
$(ps -wwU root -o 'command')
EOF
printf '%s' "${vpn:-ï‚œ None}"
}


get_song() {
    [ -f $song_skroll ] || return 1
    while read -r line ; do
        song=$line
    done <$song_skroll
    printf 'ðŸŽµ %s /' "${song:-loading...}"
}

get_ssid() {
    case $(get_interface) in
        eth[0-9]|enp[0-9]s[0-9][0-9])
            essid=Wired
            ;;
        *)
read _ _ _ essid <<-EOF
$(iwconfig $(get_interface) 2>/dev/null)
EOF
    esac

    case $essid in
        *':off/'*)
            ;;
        *)
            e=ï‡«
            ssid=${essid%\"*}
            ssid=${ssid#*\"}
    esac
    printf '%s %s' "${e:-âŒ}  ${ssid:-No Internet}"
}
get_link_qual() {
iwconfig $(get_interface) 2>/dev/null | \
while read -r line ; do
    case $line in
        *'Link Quality'*)
            line=${line%/*}
            line=${line#*=}
            line=$((line * 100 / 70))
            printf '%s%%' $line
            break
    esac
done
}

get_traffic() {
    int=$(get_interface)
    if [ -f "/sys/class/net/$int/statistics/rx_bytes" ] ; then
        read rx <"/sys/class/net/$int/statistics/rx_bytes"
        read tx <"/sys/class/net/$int/statistics/tx_bytes"
    fi
    printf 'ï£ %s ï¢ %s' \
        "$(printf '%s\n' "${rx:-0}" | human )" \
        "$(printf '%s\n' "${tx:-0}" | human )"
}

get_cpu() {
cpuload=$(top -bn1 | grep "Cpu(s)" | \
           sed "s/.*, *\([0-9.]*\)%* id.*/\1/" | \
           awk '{print 100 - $1"%"}')
echo 'ðŸ’»' ${cpuload}

}
get_mem() {
    while IFS=':k ' read -r key val _ ; do
        case $key in
            MemTotal|Shmem) used=$((used + val)) ;;
            MemFree|Buffers|Cached|SReclaimable) used=$((used - val))
        esac
    done </proc/meminfo

    printf 'ï¡š %s' "$((used / 1024))M"
}

get_bat() {
    read p </sys/class/power_supply/BAT1/capacity
    read s </sys/class/power_supply/ACAD/online
    case $s in
        1) e='ï’’' ;;
        0) case ${p%?} in
               [8-9]|10) e='ï‰€' ;;
               [6-7]) e='ï‰' ;;
               [3-5]) e='ï‰‚' ;;
               [1-2]) e='ï‰ƒ' ;;
                   *) e='ï‰„'
           esac
    esac
    printf "$e  %s%%" $p
}

get_vol() {
    speakers=$(amixer sget Master | grep '\[on\]' 2>/dev/null)
    getvol=$(amixer sget Master)
    getvol=${getvol%%\%*}
    getvol=${getvol##*\[}
    [ "${speakers}" ] && echo 'ðŸ”Š ' ${getvol}% || echo 'ï‘¦  muted' 

}
get_space() {
    df -a -h | while read -r line ; do
        case $line in
            */home)
                set -- $line
                printf 'ïŸ‰ %s' $4
                break
        esac
    done
}

# -*-*-*-*-*-* main *-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*

main() {
    while sleep 1 ; do
    printf '%s %s / %s / %s / %s / %s / %s / %s / %s\n' \
        "$(get_song)" \
        "$(get_ssid)$(get_link_qual)" \
        "$(get_traffic)" \
        "$(get_cpu)" \
        "$(get_mem)" \
        "$(get_space)" \
        "$(get_bat)" \
        "$(get_vol)" \
        "$(date "+%a %d %I:%M %p") "
    done >$bar_fifo
}

main
