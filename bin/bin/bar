#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# the unholy lemonbar
#

# -*-*-*-*-*-* init -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*
bar_fifo=${XDG_CACHE_HOME:-~/.cache}/bar
song_skroll=${XDG_CACHE_HOME:-~/.cache}/song_skroll

rm $bar_fifo $song_skroll 2>/dev/null ||:
mkfifo $bar_fifo

# -*-*-*-*-*-* daemons *-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*
while read -r line ; do
    xsetroot -name "$line"
done <$bar_fifo &

pids=$!

while sleep 3 ; do
    while pgrep mpv >/dev/null && \
        : | nc -U -N /tmp/mpvsocket 2>/dev/null ;do
        $HOME/bin/song-name | skroll -n 40 -d 0.2 -r >>$song_skroll
    done
    rm $song_skroll 2>/dev/null ||:
done &

pids="$pids $!"

trap 'for p in $pids ; do kill -9 $p ; done ; \
    rm $bar_fifo $song_skroll ; xsetroot -name killed' \
    INT TERM QUIT KILL EXIT

# -*-*-*-*-* helper functions -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*
get_interface() {
    for int in enp1s0 wlp0s20u1u3 wlp0s20u1 ; do
        a=$(iwconfig $int 2>/dev/null)
        [ "${a}" ] && echo "${int}" && break
    done
}


# -*-*-*-*-* modules -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*--*-*-*
get_vpn() {
while read -r cmd ; do
    case $cmd in
        openvpn*)
            vpn=${cmd##* }
            vpn=${vpn##*/}
            vpn="ï€£ ${vpn%.ovpn}"
            break
    esac
done <<EOF
$(ps -wwU root -o 'command')
EOF
printf '%s' "${vpn:-ï‚œ None}"
}


get_song() {
    [ -f $song_skroll ] || return 1
    while read -r line ; do
        song=$line
    done <$song_skroll
    printf 'ðŸŽµ %s /' "${song:-loading...}"
}

get_ssid() {
    int=$(get_interface)
    case $int in
        enp1s0) ssid='ï‡«  Wired' ;;
        wlp0s20u1|wlp0s20u1u3)
            out=$(iwconfig "${int}" | head -n1 | cut -d '"' -f 2)
        ssid="ï‡«  ${out}"
    esac
    printf '%s' "${ssid:-âŒ No Internet}"
}
get_link_qual() {
                 iwconfig $int | while read -r line ; do
                        read -r _ _ _ _ _ _ _ dBm _
                        printf ' %s%%' $(((${dBm%dBm} + 100) ))
                        break
            done
        }

get_traffic() {
while read -r line ; do
    set -- $line
done <<EOF
$(netstat -c 1 -w 1 -b)
EOF
printf 'ï£ %s ï¢ %s' \
    "$(fmt_human $1)" \
    "$(fmt_human $2)"
}

get_cpu() {
cpuload=$(top -bn1 | grep "Cpu(s)" | \
           sed "s/.*, *\([0-9.]*\)%* id.*/\1/" | \
           awk '{print 100 - $1"%"}')
echo 'ðŸ’»' ${cpuload}

}
get_mem() {

    ram=$(free -m | awk 'NR==2{printf "%sM", $3 }')
    printf 'ï¡š %s' "${ram}"
}
get_bat() {
    p=$(cat /sys/class/power_supply/BAT1/capacity)
    case $(cat /sys/class/power_supply/BAT1/status) in
        Full | Charging) emoji='ï’’' ;;
        Discharging)
              if [ $p -gt 80 ] ; then emoji='ï‰€'
            elif [ $p -gt 60 ] ; then emoji='ï‰'
            elif [ $p -gt 35 ] ; then emoji='ï‰‚'
            elif [ $p -gt 10 ] ; then emoji='ï‰ƒ'
                                 else emoji='ï‰„'; fi
    esac
    printf "%s  %s%%" "$emoji" "$p"
}

get_vol() {
    speakers=$(amixer sget Master | grep '\[on\]' 2>/dev/null)
    getvol=$(amixer sget Master)
    getvol=${getvol%%\%*}
    getvol=${getvol##*\[}
    [ "${speakers}" ] && echo 'ðŸ”Š ' ${getvol}% || echo 'ï‘¦  muted' 

}
get_space() {
    df -a -h | while read -r line ; do
        case $line in
            */home)
                set -- $line
                printf 'ïŸ‰ %s' $4
                break
        esac
    done
}

# -*-*-*-*-*-* main *-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*

main() {
    while sleep 1 ; do
        printf '%s %s / %s / %s / %s / %s / %s  / %s\n' \
            "$(get_song)" \
            "$(get_ssid)$(get_link_qual)" \
            "$(get_cpu)" \
            "$(get_mem)" \
            "$(get_space)" \
            "$(get_bat)" \
            "$(get_vol)" \
            "$(date "+%a %I:%M %p") "
    done >$bar_fifo
}

main
