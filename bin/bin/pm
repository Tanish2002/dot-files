#!/bin/sh
opt="$(echo "Poweroff \nReboot \nLogout " | rofi -dmenu -width 22 -lines 4 -i -p "Power Menu ❯")"
echo $opt
case $opt in
    "Logout ")
        bspc quit 2>/dev/null || killall -TERM dwm 2>/dev/null
        ;;
    "Reboot ")
        sudo reboot
        ;;
    "Poweroff ")
        sudo shutdown -P now
        ;;
    "*")
        echo none
        ;;
esac

